{
    "plugins": ["prettier-plugin-blade"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "tabWidth": 4,
                "printWidth": 120,
                "singleQuote": false,
                "trailingComma": "es5"
            }
        }
    ],
    "tabWidth": 4,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true
}
